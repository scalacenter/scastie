#!/usr/bin/env bash

# set -x

HERE="`dirname $0`"

if [ ! -f $HERE/.coursier ]; then
  curl -L -o $HERE/.coursier https://git.io/vgvpD
  chmod +x $HERE/.coursier
fi

if [ ! -f $HERE/.scalafmt ]; then
  $HERE/.coursier bootstrap com.geirsson:scalafmt-cli_2.11:1.1.0 --main org.scalafmt.cli.Cli -o $HERE/.scalafmt
  chmod +x $HERE/.scalafmt
fi

$HERE/.scalafmt "$@"

# This is way faster !
#
# coursier bootstrap \
#   --standalone com.geirsson:scalafmt-cli_2.12:1.1.0 \
#   -o scalafmt_ng \
#   -f --main com.martiansoftware.nailgun.NGServer
# ./scalafmt_ng &
# nix-env -i nailgun
# ng ng-alias scalafmt org.scalafmt.cli.Cli
# ng scalafmt --version # should be 1.1.0